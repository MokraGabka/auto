<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pad"
    >

     <io.github.controlwear.virtual.joystick.android.JoystickView
         android:id="@+id/joystickView"
         android:layout_width="270dp"
         android:layout_height="316dp"
         android:layout_marginStart="475dp"
         android:layout_marginTop="20dp"
         app:JV_backgroundColor="#009688"
         app:JV_borderColor="#00796B"
         app:JV_borderWidth="4dp"
         app:JV_buttonColor="#FF6E40"
         app:JV_buttonSizeRatio="15%"
         app:JV_fixedCenter="false" />

    <io.github.controlwear.virtual.joystick.android.JoystickView
        android:id="@+id/joystickView2"
        android:layout_width="270dp"
        android:layout_height="316dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        app:JV_backgroundColor="#009688"
        app:JV_borderColor="#00796B"
        app:JV_borderWidth="4dp"
        app:JV_buttonColor="#FF6E40"
        app:JV_buttonSizeRatio="15%"
        app:JV_fixedCenter="false" />

    <Switch
        android:id="@+id/auto"
        android:layout_marginTop="80dp"
        android:layout_marginStart="363dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Auto" />

    <EditText
        android:id="@+id/IP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="30dp"
        android:text="127.0.0.1"
        />

    <EditText
       android:id="@+id/port"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="335dp"
       android:layout_marginTop="150dp"
       android:ems="10"
       android:inputType="number"
       android:textSize="30dp"
       android:text="5000"
       />




</RelativeLayout>